<!doctype html>
<html>
    <head>
        <meta charset="utf-8"/>
        <title>
            <%= title %>
        </title>
    </head>
    <body>
        <form action="/users/signup" method="post">
            <fieldset>
                <legend><h1><%= title %></h1></legend>
                E-mail : <input type="email" name="email" placeholder="email" required><br>
                Password : <input type="password" name="passwd" placeholder="password" required><br>
                Confirm : <input type="password" name="confirm" placeholder="confirm" required><br>
                <!--<input type="checkbox" name="form">Forms that you don't have to know(essential)<br>-->
                <input type="submit" value="Sign up"></input>
            </fieldset>
        </form>
    </body>
</html>